    <modelVersion>4.0.0</modelVersion>

    <groupId>com.doopey.test</groupId>
    <artifactId>test-service</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>war</packaging>

    <dependencies>
        <dependency>
            <groupId>org.apache.hadoop</groupId>
            <artifactId>hadoop-client</artifactId>
            <version>2.6.0-mdh3.6.4</version>
            <exclusions>
                <exclusion>
                    <groupId>org.apache.thrift</groupId>
                    <artifactId>libthrift</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.xiaomi.milife</groupId>
            <artifactId>milife-recommend-common</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

    </dependencies>

    <profiles>
        <profile>
            <id>staging</id>
            <activation>
                <property>
                    <name>staging</name>
                    <value>true</value>
                </property>
            </activation>
            <properties>
                <LOG4J_LEVEL>DEBUG</LOG4J_LEVEL>
                <!-- ZOOKEEPER ACCOUNT -->
                <ZOOKEEPER_USE>TRUE</ZOOKEEPER_USE>
                <ZOOKEEPER_HOST>STAGING</ZOOKEEPER_HOST>
            </properties>
        </profile>

        <!-- production server lg-->
        <profile>
            <id>production-lg</id>
            <activation>
                <property>
                    <name>production-lg</name>
                    <value>true</value>
                </property>
            </activation>
            <properties>
                <log4j_level>error</log4j_level>
                <!-- zookeeper account -->
                <zookeeper_use>true</zookeeper_use>
                <zookeeper_host>lugu</zookeeper_host>
            </properties>
        </profile>

        <!-- production server c3-->
        <profile>
            <id>c3</id>
            <activation>
                <property>
                    <name>c3</name>
                    <value>true</value>
                </property>
            </activation>
            <properties>
                <log4j_level>debug</log4j_level>
                <!-- zookeeper account -->
                <zookeeper_use>true</zookeeper_use>
                <zookeeper_host>c3</zookeeper_host>
            </properties>
        </profile>
    </profiles>

    <build>
        <resources>
            <resource>
                <directory>
                    ${project.basedir}/src/main/resources
                </directory>
                <filtering>true</filtering>
            </resource>
