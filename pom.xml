                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.8</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <configurationDirectory>conf</configurationDirectory>-->
                    <configurationSourceDirectory>./src/main/conf</configurationSourceDirectory>
                    <filterConfigurationDirectory>true</filterConfigurationDirectory>
                    <copyConfigurationDirectory>true</copyConfigurationDirectory>
                    <programs>
                        <program>
                            <mainClass>com.doopey.test.user.Worker</mainClass>
                            <jvmSettings>
                                <systemProperties>
                                    <systemProperty>java.security.krb5.conf=resources/krb5.conf</systemProperty>
                                    <systemProperty>hadoop.property.hadoop.security.authentication=kerberos</systemProperty>
                                    <systemProperty>hadoop.property.hadoop.client.kerberos.principal=h_o2o@XIAOMI.HADOOP</systemProperty>
                                    <systemProperty>hadoop.property.hadoop.client.keytab.file=resources/h_o2o.keytab</systemProperty>
                                </systemProperties>
                            </jvmSettings>
                            <name>start-worker.sh</name>
                        </program>
                        <program>
                            <mainClass>com.doopey.test.user.Test</mainClass>
                            <name>start-test.sh</name>
                        </program>
                    </programs>
                </configuration>
